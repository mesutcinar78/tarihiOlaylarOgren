@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
    <li>
        @*@Html.ActionLink("Merhaba " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
        <a>Merhaba @User.Identity.GetUserName()</a>
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Çıkış Yap</a></li>

    <li class="dropdown-submenu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="nav-label glyphicon glyphicon-user" aria-hidden="true"></span><span class="caret "></span></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Tarihi Olaylar", "TarihiOlaylarOnay", "Home")</li>
